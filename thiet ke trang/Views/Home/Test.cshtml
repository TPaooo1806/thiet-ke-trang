@{
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}
<style type="text/css">
    #banner{
        background-image: url("../Content/ha/hinhniengau.jpg");
        background-size: cover;
        background-position: center;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        vertical-align: middle;
        color: cornsilk
    }
    .banner-content{
        text-align: center;
        color: cornsilk
    }
    .banner-content h2{
        font-size: 2.5rem;
        color: sandybrown;
    }
    .banner-content p{
        font-size: 2rem;
        color:saddlebrown;
    }
    .btn{
        display: inLine-block;
        padding: 5px 20px;
        background-color:darkorange;
        color: white;
        text-decoration:none;
        font-weight: bold;
    }
    #featurProd{
        text-align: center;
    }
    #featurProd h2{
        font-size: 2rem;
        margin-bottom: 20px;
    }
    .productContainer{
        display: flex;
        justify-content: center;
        gap: 30px;
    }
    .Product-item{
        width: 200px;
    }
    .productDesc{
        font: arial;
        font-size: 12px;
        color: gray;
    }
    .Product-item h3{
        font-size: 16px;
        color: black;
        margin: 10px 0px;
    }
    .productPrice{
        font: arial;
        font-size: 12px;
        color: black;
        font-weight: bold;
    }
    .Product-item img{
       max-width: 150px;
    }
</style>
<section id="banner">
    <div class="banner-content">
        <h2>Chào mừng đến với web bán gấu bông của tôi</h2>
        <p>Hàng ngàn gấu bông đang chờ bạn đấy</p>
        <a href="#" class="btn">Bắt đầu mua sắm</a>
    </div>
</section>
    <section id="search" class="content-section">

    </section>
    <section id="featurProd" class="content-section">
        <h2>Sản phẩm nổi bật</h2>
        <div class="productContainer">
            <div class="Product-item">
              <img src="~/Content/ha/gau_bong_cute_4d.jpg" />
              <h3>Gấu bông màu nâu</h3>
              <p class="productDesc">phổ biến,giá sinh viên</p>
              <p class="productPrice">100.000</p>
            </div>
            <div class="Product-item">
              <img src="~/Content/ha/gau4.jpg" />
              <h3>Gấu teddy</h3>
              <p class="productDesc">siêu cấp dễ thương, giá sinh viên</p>
              <p class="productPrice">99.000</p>
            </div>
            <div class="Product-item">
              <img src="~/Content/ha/gaubongnho.jpg"  />
              <h3>Gấu bông nhỏ màu trắng</h3>
              <p class="productDesc">xinh đẹp, hợp với các bạn nữ</p>
              <p class="productPrice">150.000</p>
            </div>
        </div>
    </section>
